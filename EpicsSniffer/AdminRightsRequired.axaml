<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="300" Height="85"
        x:Class="EpicsSniffer.AdminRightsRequired"
        WindowStartupLocation="CenterOwner"
        Icon="resm:EpicsSniffer.icon_300x300.png"
        Title="Admin rights required">
  <StackPanel>
    <TextBlock TextWrapping="Wrap" Margin="5">This software requires to be started as Administrator
in order to capture the network traffic.</TextBlock>
    <Button Content="Ok" Width="80" HorizontalAlignment="Right" Margin="10" Click="BtnCloseClick" />
  </StackPanel>
</Window>
